{
  "name": "linkedin-clone-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "shared"
  ],
  "scripts": {
    "client": "cd client && npm start",
    "server": "cd server && dotnet run --project LinkedIn.Api",
    "server:watch": "cd server && dotnet watch --project LinkedIn.Api",
    "dev": "concurrently \"npm run server:watch\" \"npm run client\"",
    "install:client": "cd client && npm install",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && dotnet build",
    "build": "npm run build:client && npm run build:server",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "restore": "cd server && dotnet restore"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "author": "Edward Duong",
  "license": "MIT"
}
